<?xml version="1.0" encoding="UTF-8"?>

<decorators defaultdir="/WEB-INF/decorators">
    <!-- Any urls that are excluded will never be decorated by Sitemesh -->
    <excludes>
        <pattern>*/nodecorate/*</pattern>
        <pattern>/styles/*</pattern>
        <pattern>/scripts/*</pattern>
        <pattern>/images/*</pattern>
        <pattern>/dojo/*</pattern>
        <pattern>/struts/*</pattern>
        <pattern>*popup*</pattern>
        <pattern>*orgPop*</pattern>
        <pattern>*Ajax.action*</pattern>
        <pattern>*myAccount*</pattern>
        <pattern>*updateAccount*</pattern>
        <pattern>*batchUpload*</pattern>
        <pattern>*ajax*</pattern>
        <pattern>*nodecor*</pattern>
        <pattern>*lookup*</pattern>
        <pattern>/helpDocs/*</pattern>
    </excludes>

    <decorator name="popup" page="popup.jsp">
        <pattern>*studyOverallStatusHistory*</pattern>
    </decorator>
    <decorator name="main" page="main.jsp">
        <pattern>/*</pattern>
    </decorator>

</decorators>
